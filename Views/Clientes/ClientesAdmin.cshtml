@model IEnumerable<Caribbean2.Models.Cliente>

@{
    ViewData["Title"] = "Clientes Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Topbar End -->
<!-- Inicio Seccion Modificable -->
<h1 class="d-flex justify-content-center mt-3">Configuración</h1>

<div class="main-content">
    <div class="roles-section">
        <div class="roles-card">
            <div class="roles-card-header d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1">
                    <h2 class="roles-card-title">Clientes</h2>
                    <p class="roles-card-description">Administración de Clientes</p>
                </div>
                <div class="button-group">
                    <a class="button" asp-action="Create">Registrar Nuevo Cliente</a>
                </div>
            </div>
            <div class="roles-card-body p-3">
                <table id="table" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Nombre</th>
                            <th>Email</th>
                            <th>Teléfono</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var cliente in Model)
                        {
                            <tr>
                                <td>@cliente.nombre</td>
                                <td>@cliente.email</td>
                                <td>@cliente.telefono</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="estadoCliente_@cliente.idCliente" @(cliente.ClienteEstado ? "checked" : "") disabled />
                                        <span class="estadoLabel" id="estadoLabel_@cliente.idCliente">
                                            @(cliente.ClienteEstado ? "Activado" : "Inactivo")
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@cliente.idCliente" title="Editar" class="icon-button edit-btn">
                                        <ion-icon name="pencil-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@cliente.idCliente" title="Detalles" class="icon-button details-btn">
                                        <ion-icon name="eye-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@cliente.idCliente" title="Eliminar" class="icon-button delete-btn">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#table').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                columnDefs: [{
                    targets: -1, // Last column (actions)
                    orderable: false,
                    searchable: false
                }]
            });
        });
    </script>
}
