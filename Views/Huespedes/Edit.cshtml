@model Huesped

@{
    ViewData["Title"] = "Edit";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Huésped</title>
    <link rel="stylesheet" href="~/css/sideBar.css">
    <link rel="stylesheet" href="~/css/roles.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/menuCentral.css">
</head>
<body>
    <!-- Topbar Star -->
        <div class="container-fluid bg-dark px-5 d-lg-block d justify-content-around mb-2">
            <div class="row gx-0 p-2 align-items-center">
                <!-- Sección de botones visibles en pantallas pequeñas y grandes -->
                <div class="btn-group-container d-flex justify-content-end">
                    <a class="btn-modern d-flex d-lg-none" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Cerrar sesión"
                    asp-controller="Usuarios" asp-action="Logout">
                        <i class="fas fa-sign-out-alt"></i>
                    </a>

                    <a asp-controller="Usuarios" asp-action="Logout" class="btn-modern me-2 d-none d-lg-inline-flex">
                        <i class="fas fa-sign-out-alt"></i> Cerrar sesión
                    </a>
                </div>
            </div>
        </div>
        <!-- Topbar End -->
    <h1 class="d-flex justify-content-center mt-3">Editar Huésped</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="roles-card">
                    <div class="roles-card-header d-flex justify-content-between align-items-center">
                        <div class="text-center flex-grow-1">
                            <h2 class="roles-card-title">Editar Huésped</h2>
                        </div>
                    </div>
                    <div class="roles-card-body p-3">
                        <form asp-action="Edit" class="mb-3" id="editForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="Id" />
                            <div class="form-group">
                                <label asp-for="NombreCompleto" class="control-label"></label>
                                <input asp-for="NombreCompleto" class="form-control" />
                                <span asp-validation-for="NombreCompleto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="CorreoElectronico" class="control-label"></label>
                                <input asp-for="CorreoElectronico" class="form-control" />
                                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TipoDocumento" class="control-label"></label>
                                <select asp-for="TipoDocumento" class="form-control">
                                    <option value="CC">Cédula de Ciudadanía</option>
                                    <option value="TI">Tarjeta de Identidad</option>
                                    <option value="CE">Cédula de Extranjería</option>
                                    <option value="PAS">Pasaporte</option>
                                    <option value="NIT">NIT</option>
                                </select>
                                <span asp-validation-for="TipoDocumento" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NumeroIdentificacion" class="control-label"></label>
                                <input asp-for="NumeroIdentificacion" class="form-control" />
                                <span asp-validation-for="NumeroIdentificacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NumeroContacto" class="control-label"></label>
                                <input asp-for="NumeroContacto" class="form-control" />
                                <span asp-validation-for="NumeroContacto" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="LugarResidencia" class="control-label"></label>
                                <input asp-for="LugarResidencia" class="form-control" />
                                <span asp-validation-for="LugarResidencia" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaLlegada" class="control-label"></label>
                                <input asp-for="FechaLlegada" class="form-control" />
                                <span asp-validation-for="FechaLlegada" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaSalida" class="control-label"></label>
                                <input asp-for="FechaSalida" class="form-control" />
                                <span asp-validation-for="FechaSalida" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdEstadoHuesped" class="control-label">Estado</label>
                                <select asp-for="IdEstadoHuesped" class="form-control" asp-items="ViewBag.IdEstadoHuesped"></select>
                                <span asp-validation-for="IdEstadoHuesped" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="bi bi-check-circle"></i> Guardar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left-circle"></i> Regresar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>