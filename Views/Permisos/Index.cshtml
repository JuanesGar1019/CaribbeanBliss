@model IEnumerable<Caribbean2.Models.Permiso>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

        <!-- Topbar End -->
        <!-- Inicio Seccion Modificable -->
                <h1 class="d-flex justify-content-center mt-3">Permisos</h1>

        <div class="main-content">
            <div class="roles-section">
                <div class="roles-card">
                    <div class="roles-card-header d-flex justify-content-between align-items-center">
                        <div class="text-center flex-grow-1">
                            <h2 class="roles-card-title">Administración de Permisos</h2>
                        </div>
                        <div class="button-group">
                            <a class="button" asp-action="Create">Crear Nuevo Permiso</a>
                        </div>
                    </div>
                    <div class="roles-card-body p-3">
                        <table id="table" class="table">
                            <thead>
                                <tr>
                                    <th>
                                        Permiso
                                    </th>
                                    <th>
                                        Descripción
                                    </th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model) {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.NombrePermiso)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.DescripcionPermiso)
                                        </td>
                                        <td>                                                
                                            <!-- Edit Icon -->
                                            <a asp-action="Edit" asp-route-id="@item.IdPermiso" data-bs-toggle="tooltip" title="Editar" class="icon-button edit-btn">
                                                <ion-icon name="pencil-outline"></ion-icon>
                                            </a> |
                                            <!-- Details Icon -->
                                            <a asp-action="Details" asp-route-id="@item.IdPermiso" data-bs-toggle="tooltip" title="Detalles" class="icon-button details-btn">
                                                <ion-icon name="eye-outline"></ion-icon>
                                            </a> |
                                            <!-- Delete Icon -->
                                            <a asp-action="Delete" asp-route-id="@item.IdPermiso" data-bs-toggle="tooltip" title="Eliminar" class="icon-button delete-btn">
                                                <ion-icon name="trash-outline"></ion-icon>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Inicializar DataTables
            $('#table').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip><"clear">'
            });
        });
    </script>
}