@model Caribbean2.Models.Reserva

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Reserva</title>
    <link rel="stylesheet" href="~/css/sideBar.css">
    <link rel="stylesheet" href="~/css/roles.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/menuCentral.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <div class="container">
        <h1 class="d-flex justify-content-center mt-3">Gestión de Reservas</h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="roles-card">
                    <div class="roles-card-header d-flex justify-content-between align-items-center">
                        <div class="text-center flex-grow-1">
                            <h2 class="roles-card-title">Crear Nueva Reserva</h2>
                        </div>
                    </div>
                    <div class="roles-card-body p-3">
                        <form asp-action="Create" class="mb-3" id="createForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="IdCliente" class="control-label">Cliente</label>
                                <select asp-for="IdCliente" class="form-control" asp-items="ViewBag.IdCliente" id="IdCliente"></select>
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdHuesped" class="control-label">Huésped</label>
                                <select asp-for="IdHuesped" class="form-control" asp-items="ViewBag.IdHuesped" id="IdHuesped"></select>
                                <span asp-validation-for="IdHuesped" class="text-danger"></span>
                            </div>
                           <div class="form-group">
                                <label asp-for="IdHabitacion" class="control-label">Habitación</label>
                                <select asp-for="IdHabitacion" class="form-control" id="IdHabitacion">
                                @if (ViewBag.IdHabitacion != null && ViewBag.IdHabitacion.Count > 0)
                                {
                                    @foreach (var item in ViewBag.IdHabitacion)
                                    {
                                        <option value="@item.Value" data-precio="@item.Text.Split('-')[1].Trim().Replace("$", "").Replace(",", "")">@item.Text</option>
                                    }
                                }
                                else
                                {
                                    <option value="">No hay habitaciones disponibles</option>
                                }
                            </select>
                                <span asp-validation-for="IdHabitacion" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaInicio" class="control-label">Fecha de Inicio</label>
                                <input asp-for="FechaInicio" class="form-control" id="FechaInicio" />
                                <span asp-validation-for="FechaInicio" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FechaFin" class="control-label">Fecha de Fin</label>
                                <input asp-for="FechaFin" class="form-control" id="FechaFin" />
                                <span asp-validation-for="FechaFin" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NumeroPersonas" class="control-label">Número de Personas</label>
                                <input asp-for="NumeroPersonas" class="form-control" id="NumeroPersonas" />
                                <span asp-validation-for="NumeroPersonas" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Notas" class="control-label">Notas</label>
                                <textarea asp-for="Notas" class="form-control" id="Notas"></textarea>
                                <span asp-validation-for="Notas" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="PrecioTotal" class="control-label">Precio Total</label>
                                <input asp-for="PrecioTotal" class="form-control" id="PrecioTotal" readonly />
                                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Anticipo" class="control-label">Anticipo</label>
                                <input asp-for="Anticipo" class="form-control" id="Anticipo" />
                                <span asp-validation-for="Anticipo" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label">Servicios Adicionales</label>
                                <div>
                                    @foreach (var servicio in ViewBag.ServiciosActivos)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input servicio-checkbox" type="checkbox" name="ServiciosSeleccionados" value="@servicio.IdServicio" data-precio="@servicio.PrecioServicio" id="servicio_@servicio.IdServicio">
                                            <label class="form-check-label" for="servicio_@servicio.IdServicio">
                                                @servicio.Nombre - @string.Format("{0:C}", servicio.PrecioServicio)
                                            </label>
                                        </div>
                                    }
                                </div>
                                <span asp-validation-for="Servicios" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="bi bi-check-circle"></i> Crear
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left-circle"></i> Regresar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="lib/tempusdominus/js/moment.min.js"></script>
    <script src="lib/tempusdominus/js/moment-timezone.min.js"></script>
    <script src="lib/tempusdominus/js/tempusdominus-bootstrap-4.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaInicioInput = document.getElementById('FechaInicio');
            const fechaFinInput = document.getElementById('FechaFin');
            const habitacionSelect = document.getElementById('IdHabitacion');
            const servicioCheckboxes = document.querySelectorAll('.servicio-checkbox');
            const precioTotalInput = document.getElementById('PrecioTotal');
            const anticipoInput = document.getElementById('Anticipo');

            function calcularPrecioTotal() {
                const fechaInicio = new Date(fechaInicioInput.value);
                const fechaFin = new Date(fechaFinInput.value);

                if (isNaN(fechaInicio) || isNaN(fechaFin) || fechaInicio >= fechaFin) {
                    precioTotalInput.value = "0.00";
                    return;
                }

                const dias = (fechaFin - fechaInicio) / (1000 * 60 * 60 * 24);

                const habitacionPrecio = parseFloat(habitacionSelect.selectedOptions[0].getAttribute('data-precio'));
                if (isNaN(habitacionPrecio)) {
                    precioTotalInput.value = "0.00";
                    return;
                }

                let precioTotal = habitacionPrecio * dias;

                servicioCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        const servicioPrecio = parseFloat(checkbox.getAttribute('data-precio'));
                        if (!isNaN(servicioPrecio)) {
                            precioTotal += servicioPrecio;
                        }
                    }
                });

                const anticipo = parseFloat(anticipoInput.value);
                if (!isNaN(anticipo)) {
                    precioTotal -= anticipo;
                }

                console.log("Días:", dias, "Precio Habitación:", habitacionPrecio, "Precio Total Calculado:", precioTotal);
                precioTotalInput.value = precioTotal.toFixed(2);
            }


            fechaInicioInput.addEventListener('change', calcularPrecioTotal);
            fechaFinInput.addEventListener('change', calcularPrecioTotal);
            habitacionSelect.addEventListener('change', calcularPrecioTotal);
            servicioCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', calcularPrecioTotal);
            });
            anticipoInput.addEventListener('input', calcularPrecioTotal);
        });

        document.getElementById('createForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevenir envío del formulario
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Estás a punto de crear una nueva reserva.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, crear',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit(); // Enviar el formulario si el usuario confirma
                }
            });
        });
    </script>
</body>
</html>
