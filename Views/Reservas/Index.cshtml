@model IEnumerable<Caribbean2.Models.ReservaAdmin>

@{
    ViewData["Title"] = "Reservas - Vista de Administración";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="d-flex justify-content-center mt-3">Reservas</h1>

<div class="main-content">
    <div class="roles-section">
        <div class="roles-card">
            <div class="roles-card-header d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1">
                    <h2 class="roles-card-title">Lista de Reservas</h2>
                </div>
                <div class="button-group">
                    <a class="button" asp-controller="Reservas" asp-action="ReservaAdmin">Crear Nueva Reserva</a>
                </div>
            </div>
            <div class="roles-card-body p-3">
                <table id="table" class="table">
                    <thead>
                        <tr>
                            <th>Cliente</th>
                            <th>Estado</th>
                            <th>Huespedes</th>
                            <th>Habitación</th>
                            <th>Precio Total</th>
                            <th>Servicios</th>
                            <th>Fecha Inicio</th>
                            <th>Fecha Fin</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var reserva in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => reserva.NombreCliente)</td>
                                <td>@Html.DisplayFor(modelItem => reserva.EstadoReserva)</td>
                                <td>@Html.DisplayFor(modelItem => reserva.Huespeds)</td>
                                <td>@Html.DisplayFor(modelItem => reserva.PrecioTotal)</td>
                                <td>@Html.DisplayFor(modelItem => reserva.Habitacion.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => reserva.Servicios)</td>
                                <td>@reserva.FechaInicio.ToString("yyyy-MM-dd")</td>
                                <td>@reserva.FechaFin.ToString("yyyy-MM-dd")</td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@reserva.IdReserva" data-bs-toggle="tooltip" title="Editar" class="icon-button edit-btn">
                                        <ion-icon name="pencil-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@reserva.IdReserva" data-bs-toggle="tooltip" title="Detalles" class="icon-button details-btn">
                                        <ion-icon name="eye-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@reserva.IdReserva" data-bs-toggle="tooltip" title="Eliminar" class="icon-button delete-btn">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Ensure table is not already initialized
            if ($.fn.DataTable.isDataTable('#table')) {
                $('#table').DataTable().destroy();
            }
            
            // Initialize DataTables with specific configuration
            let table = $('#table').DataTable({
                destroy: true, // Allow reinitialization
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                dom: '<"top"lf>rt<"bottom"ip><"clear">',
                columnDefs: [
                    {
                        targets: -1,
                        orderable: false,
                        searchable: false
                    }
                ]
            });
        });
    </script>
}