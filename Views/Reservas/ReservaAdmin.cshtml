@model Caribbean2.Models.ReservaAdmin

@{
    ViewData["Title"] = "Crear Reserva";
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Reserva</title>
    <link rel="stylesheet" href="~/css/sideBar.css">
    <link rel="stylesheet" href="~/css/roles.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/menuCentral.css">

    <!-- Favicon -->
    <link href="img/favicon.ico" rel="icon">

    <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Heebo:wght@400;500;600&family=Nunito:wght@600;700;800&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">

    <!-- Libraries Stylesheet -->
    <link href="lib/animate/animate.min.css" rel="stylesheet">
    <link href="lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="lib/tempusdominus/css/tempusdominus-bootstrap-4.min.css" rel="stylesheet" />

    <!-- Customized Bootstrap Stylesheet -->
    <link href="css/bootstrap.min.css" rel="stylesheet">

    <!-- SweetAlert CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <!-- SweetAlert JS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
    <h1 class="d-flex justify-content-center mt-3">Gestión de Reservas</h1>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-6">
                <div class="roles-card">
                    <div class="roles-card-header d-flex justify-content-between align-items-center">
                        <div class="text-center flex-grow-1">
                            <h2 class="roles-card-title">Crear Reserva</h2>
                        </div>
                    </div>
                    <div class="roles-card-body p-3">
                        <form asp-action="ReservaAdmin" method="post" class="mb-3" id="createForm">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="NombreCliente" class="control-label">Nombre del Cliente</label>
                                <select asp-for="NombreCliente" class="form-control">
                                    @foreach (var cliente in ViewBag.ClientesActivos)
                                    {
                                        <option value="@cliente.nombre">@cliente.nombre</option>
                                    }
                                </select>
                                <span asp-validation-for="NombreCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="IdHuesped" class="control-label">Huésped</label>
                                <select asp-for="IdHuesped" class="form-control">
                                    @foreach (var huesped in ViewBag.HuespedesActivos)
                                    {
                                        <option value="@huesped.Id">@huesped.NombreCompleto</option>
                                    }
                                </select>
                                <span asp-validation-for="IdHuesped" class="text-danger"></span>
                            </div>
                            <div>
                                <label for="IdHabitacion">Habitación:</label>
                                <select id="IdHabitacion" name="IdHabitacion" class="form-control" onchange="actualizarPrecio()">
                                    @foreach (var habitacion in ViewBag.HabitacionesActivas)
                                    {
                                        <option value="@habitacion.IdHabitacion" data-precio="@habitacion.PrecioHabitacion">
                                            @habitacion.Nombre
                                        </option>
                                    }
                                </select>
                            </div>

                            <div>
                                <label for="FechaInicio">Fecha de Inicio:</label>
                                <input type="date" id="FechaInicio" name="FechaInicio" class="form-control" onchange="actualizarPrecio()" />
                            </div>

                            <div>
                                <label for="FechaFin">Fecha de Fin:</label>
                                <input type="date" id="FechaFin" name="FechaFin" class="form-control" onchange="actualizarPrecio()" />
                            </div>

                            <div>
                                <label for="Servicios">Servicios Adicionales:</label><br />
                                @foreach (var servicio in ViewBag.ServiciosActivos)
                                {
                                    <label>
                                        <input type="checkbox" class="servicio" data-precio="@servicio.PrecioServicio" onchange="actualizarPrecio()" />
                                        @servicio.Nombre (@servicio.PrecioServicio:C)
                                    </label>
                                    <br />
                                }
                            </div>

                            <div>
                                <h4>Precio Total: <span id="PrecioTotal">0.00</span></h4>
                            </div>
                            <div class="form-group text-center mt-4">
                                <button type="submit" class="btn btn-success me-2">
                                    <i class="bi bi-check-circle"></i> Reservar
                                </button>
                                <a asp-action="Index" class="btn btn-secondary">
                                    <i class="bi bi-arrow-left-circle"></i> Regresar
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const fechaInicioInput = document.getElementById('FechaInicio');
            const fechaFinInput = document.getElementById('FechaFin');
            const habitacionSelect = document.getElementById('IdHabitacion');
            const servicioCheckboxes = document.querySelectorAll('.servicio');
            const precioTotalInput = document.getElementById('PrecioTotal');

            function calcularPrecioTotal() {
                const fechaInicio = new Date(fechaInicioInput.value);
                const fechaFin = new Date(fechaFinInput.value);

                if (isNaN(fechaInicio) || isNaN(fechaFin) || fechaInicio >= fechaFin) {
                    precioTotalInput.textContent = "0.00";
                    return;
                }

                const dias = (fechaFin - fechaInicio) / (1000 * 60 * 60 * 24);

                const habitacionPrecio = parseFloat(habitacionSelect.selectedOptions[0].dataset.precio);
                if (isNaN(habitacionPrecio)) {
                    precioTotalInput.textContent = "0.00";
                    return;
                }

                let precioTotal = habitacionPrecio * dias;

                servicioCheckboxes.forEach(checkbox => {
                    if (checkbox.checked) {
                        const servicioPrecio = parseFloat(checkbox.dataset.precio);
                        if (!isNaN(servicioPrecio)) {
                            precioTotal += servicioPrecio;
                        }
                    }
                });

                precioTotalInput.textContent = precioTotal.toFixed(2);
            }

            fechaInicioInput.addEventListener('change', calcularPrecioTotal);
            fechaFinInput.addEventListener('change', calcularPrecioTotal);
            habitacionSelect.addEventListener('change', calcularPrecioTotal);
            servicioCheckboxes.forEach(checkbox => {
                checkbox.addEventListener('change', calcularPrecioTotal);
            });

            calcularPrecioTotal(); // Calcular el precio total al cargar la página
        });

        function actualizarPrecio() {
            const habitacionSelect = document.getElementById('IdHabitacion');
            const fechaInicio = document.getElementById('FechaInicio').value;
            const fechaFin = document.getElementById('FechaFin').value;
            const servicios = document.querySelectorAll('.servicio:checked');

            let precioTotal = 0;

            // Precio de la habitación
            const precioHabitacion = parseFloat(habitacionSelect.options[habitacionSelect.selectedIndex]?.dataset.precio || 0);
            if (fechaInicio && fechaFin) {
                const fechaInicioDate = new Date(fechaInicio);
                const fechaFinDate = new Date(fechaFin);
                const dias = Math.max((fechaFinDate - fechaInicioDate) / (1000 * 60 * 60 * 24), 0);
                precioTotal += dias * precioHabitacion;
            }

            // Precio de los servicios
            servicios.forEach(servicio => {
                precioTotal += parseFloat(servicio.dataset.precio || 0);
            });

            // Actualizar el precio total en la vista
            document.getElementById('PrecioTotal').textContent = precioTotal.toFixed(2);
        }

        document.getElementById('createForm').addEventListener('submit', function (e) {
            e.preventDefault(); // Prevenir envío del formulario
            Swal.fire({
                title: '¿Estás seguro?',
                text: "Estás a punto de crear una nueva reserva.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Sí, crear',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    this.submit(); // Enviar el formulario si el usuario confirma
                }
            });
        });
    </script>
</body>
</html>
