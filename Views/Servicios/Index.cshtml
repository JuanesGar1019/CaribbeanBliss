@model IEnumerable<Caribbean2.Models.Servicio>

@{
    ViewData["Title"] = "Servicios";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Specify layout
}

<h1 class="d-flex justify-content-center mt-3">Servicios</h1>

<div class="main-content">
    <div class="roles-section">
        <div class="roles-card">
            <div class="roles-card-header d-flex justify-content-between align-items-center">
                <div class="text-center flex-grow-1">
                    <h2 class="roles-card-title">Lista de Servicios</h2>
                </div>
                <div class="button-group">
                    <a class="button" asp-action="Create">Crear Nuevo Servicio</a>
                </div>
            </div>
            <div class="roles-card-body p-3">
                <table id="table" class="table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                            <th>@Html.DisplayNameFor(model => model.PrecioServicio)</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                                <td>@Html.DisplayFor(modelItem => item.PrecioServicio)</td>
                                <td>
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="estadoServicio_@item.IdServicio" @(item.EstadoServicio ? "checked" : "") disabled />
                                        <span class="estadoLabel" id="estadoLabel_@item.IdServicio">
                                            @(item.EstadoServicio ? "Activado" : "Inactivo")
                                        </span>
                                    </div>
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.IdServicio" data-bs-toggle="tooltip" title="Editar" class="icon-button edit-btn">
                                        <ion-icon name="pencil-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Details" asp-route-id="@item.IdServicio" data-bs-toggle="tooltip" title="Detalles" class="icon-button details-btn">
                                        <ion-icon name="eye-outline"></ion-icon>
                                    </a> |
                                    <a asp-action="Delete" asp-route-id="@item.IdServicio" data-bs-toggle="tooltip" title="Eliminar" class="icon-button delete-btn">
                                        <ion-icon name="trash-outline"></ion-icon>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#table').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.6/i18n/es-ES.json"
                },
                pageLength: 5,
                lengthMenu: [[5, 10, 25, 50, -1], [5, 10, 25, 50, "Todos"]],
                responsive: true,
                columnDefs: [{
                    targets: -1,
                    orderable: false,
                    searchable: false
                }],
                dom: 'lfrtip'
            });
        });
    </script>
}